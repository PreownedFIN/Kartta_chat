<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="userId"
        android:id="@+id/tvUserId"
        android:layout_alignBottom="@+id/tvLngDescText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tvUserName"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/tvLatDescText"
        android:layout_toStartOf="@+id/tvLatDescText"
        android:layout_marginRight="71dp"
        android:layout_marginEnd="71dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tvLatObj"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tvLngObj"
        android:layout_below="@+id/tvLatObj"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Lat"
        android:id="@+id/tvLatDescText"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/tvLngDescText"
        android:layout_alignStart="@+id/tvLngDescText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Lng"
        android:id="@+id/tvLngDescText"
        android:layout_below="@+id/tvLatObj"
        android:layout_toLeftOf="@+id/tvLatObj"
        android:layout_toStartOf="@+id/tvLatObj"
        android:layout_marginRight="27dp"
        android:layout_marginEnd="27dp" />
</RelativeLayout>